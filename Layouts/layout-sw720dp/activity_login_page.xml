<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bullet_journal_designs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/loginpagebackgroundshade">


        <ProgressBar
            android:id="@+id/mprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/progressbarmargintop"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/loginpagetitleframemargin"
            android:layout_marginRight="@dimen/loginpagetitleframemargin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginpagetitlemargintop"
                android:background="@color/logintitletextbackground"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/loginpagetitle"
                android:textColor="@color/textcolorwhite"
                android:textStyle="bold"

                android:textSize="@dimen/loginpagetitletextsize" />
        </FrameLayout>
        <Button
            android:id="@+id/googlebutton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/googlebuttonheight"
            android:layout_marginTop="@dimen/googlebuttonmargintop"

            android:background="@drawable/googlebuttondesign"

            android:drawableLeft="@drawable/googledrawable"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"

            android:layout_marginBottom="@dimen/googlebuttonmarginbuttom"
            android:paddingLeft="@dimen/googlebuttonpaddingleft"

            android:textAllCaps="false"
            android:text="@string/Googlebuttontext"
            android:textSize="@dimen/googlebuttontextsize"
            android:textColor="@color/textcolorwhite"
            android:layout_marginLeft="@dimen/googlebuttonmarginleft"
            android:layout_marginRight="@dimen/googlebuttonmarginright"



            />
    </LinearLayout>
</LinearLayout>